<Window x:Class="RosimKadastr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RosimKadastr"
        mc:Ignorable="d"
        Title="Rosim" Height="650" Width="614" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="MainGrid" Margin="0,0,10,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="465*"/>
            <RowDefinition Height="169*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="393*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="InputField" Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" ToolTip="" BorderThickness="5,5,5,5" />
        <TextBox x:Name="NumberOfFiles"  HorizontalAlignment="Center" Height="31" Margin="0,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" Grid.Column="1"/>
        <Label Content="Номеров в каждом файле &#xD;&#xA;(по умолчанию 100): " HorizontalAlignment="Center" VerticalAlignment="Top" Width="158" Height="47" Grid.Column="1" Margin="0,286,0,0"/>
        <Button x:Name="ProcessBTN" Content="Обработать" HorizontalAlignment="Center" Height="31" Margin="0,26,0,0" VerticalAlignment="Top" Width="114" Grid.Column="1" Click="ProcessBTN_Click"/>
        <Button Grid.Column="1" Content="Скачать файлы" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Height="31" Width="114"/>
        <TextBlock x:Name="Info" Grid.Column="1" HorizontalAlignment="Center" Margin="0,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" Height="67"/>
        <Button x:Name="ShowDuplicatesBTN" Grid.Column="1" Content="Показать дубликаты" HorizontalAlignment="Center" Height="32" Margin="0,148,0,0" VerticalAlignment="Top" Width="141" Click="ShowDuplicatesBTN_Click"/>
    </Grid>
</Window>
